<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/pattern">


    <TextView
        android:id="@+id/tv_bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="#D94E19"
        android:text="Equipos De Basketball"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVerEquipos"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/colorFondoTextView"
        android:text="Ver Equipos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAgregarEquipo"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:background="@color/colorFondoTextView"
        android:text="Agregar Equipo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:toggleCheckedStateOnClick="false" />
</LinearLayout>